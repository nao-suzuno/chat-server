        "Ref": "ChatDashserver2LambdaVersionE33IadOTIGgAxPR5KpDdZeMh7D9rYe9SkX54F74m8"
      },
      "Export": {
        "Name": "sls-chat-server-dev-ChatDashserver2LambdaFunctionQualifiedArn"
